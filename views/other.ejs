<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ET-chat</title>
  <link rel="stylesheet" href="/style.css">
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body>
  <div class="container">
    
   
      <div class="navbar">
        <button class="icon-button sdbr" title="Sidebar"><i data-lucide="sidebar"></i></button>
        <button class="icon-button srch" title="Search"><i data-lucide="search"></i></button>
        <button onclick="window.location.href='/home'" class="icon-button nwct" title="New Chat"><i data-lucide="message-square-plus"></i></button>
        <button class="icon-button stgs" title="Settings"><i data-lucide="settings"></i></button>
      </div>
      <div class="welcome-text">
        <h1>Welcome to ChatBot</h1>
      </div>
    

    
    <div class="chat-container">
      <% for (let i = 0; i < ans.length; i++) { %>
        <div class="chat-row user-message">
          <div class="chat-bubble message"><%= ans[i].message %></div>
        </div>
        <div class="chat-row bot-response">
          <div class="chat-bubble response"><%= ans[i].response %></div>
        </div>
      <% } %>
    </div>

    
    <div class="form">
      <form action="/chat" method="post">
        <input style="margin-top: 10%;" class="input1" autocomplete="off" autocorrect="off"  type="text" name="user_input" placeholder="Ask me anything within Ethiopia" required>
        <button class="btns" type="submit"><i data-lucide="arrow-up"></i></button>
      </form>
    </div>

   
    <div class="container2">
        <div class="nav">
            <div class="icon">
                <div class="btn1"><button class="icon-button" title="Sidebar">
                <i data-lucide="sidebar" ></i></div>
                     </button> 
                <div class="para">Side bar</div>
            </div>
            
             <div class="icon">
               <div class="btn2"><button class="icon-button" title="Sidebar">
                <i data-lucide="search" ></i></div>
                     </button> 
                <div class="para">Search</div>
            </div>

             <div class="icon">
               <div  onclick="window.location.href='/home'" class="btn3"><button class="icon-button" title="New Chat">
                <i data-lucide="message-square-plus"></i></div>
                     </button> 
                <div class="para">New Chat</div>
            </div>

             <div class="icon">
                <div class="btn4"><button class="icon-button" title="New Chat">
                <i data-lucide="settings"></i></div>
                     </button> 
                <div class="para">Settings</div>
            </div>
            
            <div class="searchChats">
            <div class="search">
                <input class="input2" type="text" placeholder="Search Chats" id="searchInput">
                
            </div>
        </div>
        </div>
        
<div class="chat-history">
    <ul class="chats"><span id="chats">Chats</span>
        <% topics.forEach((topic, index) => { %>
            <li class="speci" onclick="window.location.href='/other'"><%= topic %></li>
        <% }) %>
    </ul>



        </div>
         <div class="settings-list">
            <ul class="lists">
                <li class="stngs">Change language</li>
                <li class="stngs">Change Model</li>
                <li class="stngs">Logout</li>
            </ul>
         </div>

        <div class="icon profile">
                <div class="btn">
                     <button onclick="window.location.href='profile'" class="icon-button" title="user">
                        <i class="he" data-lucide="user" ></i>
                    </button> 
                </div>
                     
                <div class="para">Honelign Yohannes</div>
        </div>
      
    </div>
  </div>

  <script>
  window.addEventListener('load', function () {
    window.scrollTo(0, document.body.scrollHeight);
  });
</script>


  <script src="/app.js"></script>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>
